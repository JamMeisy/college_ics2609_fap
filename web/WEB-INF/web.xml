<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!-- Header and Footer -->
    <context-param>
        <param-name>Header</param-name>
        <param-value>assets/logo.png</param-value>
    </context-param>
    <context-param>
        <param-name>Footer</param-name>
        <param-value>Juico | Tan - Machine Problem #3 (ICS2609)</param-value>
    </context-param>

    <!-- Encryption -->
    <context-param>
        <param-name>key</param-name>
        <param-value>activelearningph</param-value>
    </context-param>
    <context-param>
        <param-name>cipher</param-name>
        <param-value>AES/ECB/PKCS5Padding</param-value>
    </context-param>
    <context-param>
        <param-name>captcha-length</param-name>
        <param-value>4</param-value>
    </context-param>

    <!-- Authentication Database -->
    <context-param>
        <param-name>derbyDriver</param-name>
        <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
        <param-name>derbyUser</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>derbyPass</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>derbyUrl</param-name>
        <param-value>jdbc:derby://localhost:1527/UserDB</param-value>
    </context-param>

    <!-- Application Database -->
    <context-param>
        <param-name>mysqlDriver</param-name>
        <param-value>org</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlPass</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/applicationdb</param-value>
    </context-param>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>authentication.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>authentication.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>authentication.CaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>

    <!-- Error Page -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exceptions.InvalidSessionException</exception-type>
        <location>/error-invalidsession.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <!-- Settings -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
</web-app>
